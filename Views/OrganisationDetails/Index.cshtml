<!-- Bootstrap -->
<script type="text/javascript" src='https://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.8.3.min.js'></script>
<script type="text/javascript" src='https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.0.3/js/bootstrap.min.js'></script>
<link rel="stylesheet" href='https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.0.3/css/bootstrap.min.css'
      media="screen" />
<!-- Bootstrap -->
<!-- Bootstrap DatePicker -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.4/css/bootstrap-datepicker.css" type="text/css" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.4/js/bootstrap-datepicker.js" type="text/javascript"></script>
<html>
<head>
    <div>
        <p>Enter your organisation details to start fund raising for a good cause.</p>
    </div>
</head>

<body>


    <div class="row">
        <div class="col-md-5">
            <form method="post" asp-controller="OrganisationDetails" asp-action="Index">
                <div class="form-group">
                    <div class="col-md-10" style="margin-top: 10px ">
                        <label>Organisation name</label>
                        <div>
                            <input type="text" style="height:25px; width:400px;"/>
                        </div>
                    </div>

                    <div class="col-md-10" style="margin-top: 10px ">
                        <label>Organisation URL</label>
                        <div>
                            <input type="text" style="height:25px; width:400px;"/>
                        </div>
                    </div>
                    <div class="col-md-10" style="margin-top: 10px ">
                        <label>Project Title</label>
                        <div>
                            <input type="text" style="height:25px; width:400px;"/>
                        </div>
                    </div>
                    <div class="col-md-10" style="margin-top: 10px ">
                        <label>Description</label>
                        <div>
                            <input type="text" style="height:150px; width:400px;"/>
                        </div>
                    </div>
                    <div class="col-md-10" style="margin-top: 10px">
                        <label>Target amount to be raised</label>
                        <div>
                            <input type="number" />
                        </div>
                    </div>
                    <div class="col-md-10" style="margin-top: 10px">
                        <label>Dateline</label>
                        <div>
                            <input class="datepicker text centered valid" type="text" id="txtSelectedDate" name="SelectedDate" readonly="readonly" />
                            <script type="text/javascript">
                                let dateToday = new Date();
                                $(function () {
                                    $('#txtSelectedDate').datepicker({
                                        changeMonth: true,
                                        changeYear: true,
                                        format: "dd/mm/yyyy",
                                        minDate: dateToday
                                    });
                                });
                            </script>
                        </div>
                    </div>
                    <div class="col-md-10" style="margin-top: 10px">
                        <div>
                            <input type="submit" value="Submit Details" class="btn btn-success" />
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</body>

</html>
